{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "flutter-analyze",
			"type": "shell",
			"command": "flutter",
			"args": ["analyze"],
			"isBackground": false,
			"problemMatcher": ["$dart-build_runner"],
			"group": "build"
		},
		{
			"label": "flutter-test-j1",
			"type": "shell",
			"command": "flutter test -j 1 -r expanded",
			"group": "test",
			"presentation": {"reveal": "always", "panel": "shared"}
		},
		{
			"label": "flutter-run-linux",
			"type": "shell",
			"command": "flutter",
			"args": ["run", "-d", "linux"],
			"isBackground": true,
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		}
	]
}
