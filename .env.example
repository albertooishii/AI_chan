
# --- API keys (placeholders) ---
GEMINI_API_KEY=PUT_YOUR_GEMINI_KEY_HERE
GEMINI_API_KEY_FALLBACK=
OPENAI_API_KEY=PUT_YOUR_OPENAI_KEY_HERE
GOOGLE_CLOUD_API_KEY=PUT_YOUR_GOOGLE_CLOUD_KEY_HERE

# --- Audio / Voice ---
# AUDIO_PROVIDER: openai | gemini
AUDIO_PROVIDER=gemini
# AUDIO_TTS_MODE: google | local
AUDIO_TTS_MODE=google
OPENAI_VOICE_NAME=sage
GOOGLE_VOICE_NAME=es-ES-Wavenet-F

# Preferred audio format for storage and STT fallbacks: mp3 | m4a | wav
PREFERRED_AUDIO_FORMAT=mp3

# OpenAI TTS model (used for message TTS). Realtime calls use OPENAI_REALTIME_MODEL.
# Recommended default from docs: gpt-4o-mini-tts
OPENAI_TTS_MODEL=gpt-4o-mini-tts

# OpenAI STT model used for transcription (recommended: gpt-4o-mini-transcribe)
OPENAI_STT_MODEL=gpt-4o-mini-transcribe

# --- Models (recommended: gemini-2.5-flash) ---
DEFAULT_TEXT_MODEL=gemini-2.5-flash
DEFAULT_IMAGE_MODEL=gpt-4.1-mini
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview
GOOGLE_REALTIME_MODEL=gemini-2.5-flash

# --- Paths (images/audio/cache) ---
IMAGE_DIR_ANDROID=/storage/emulated/0/Pictures/AI_chan
IMAGE_DIR_IOS=DCIM/AI_chan
IMAGE_DIR_DESKTOP=~/AI_chan/images
IMAGE_DIR_WEB=AI_chan

AUDIO_DIR_ANDROID=/data/user/0/com.example.ai_chan/cache
AUDIO_DIR_IOS=Library/Caches
AUDIO_DIR_DESKTOP=~/AI_chan/audio
AUDIO_DIR_WEB=AI_chan_audio

CACHE_DIR_ANDROID=
CACHE_DIR_IOS=
CACHE_DIR_DESKTOP=~/AI_chan/cache
CACHE_DIR_WEB=AI_chan_cache

# --- Logging ---
# Levels: error|warn|info|debug|trace
APP_LOG_LEVEL=debug
# When set to 1, structured debug JSON logs will be disabled. Defaults to 0
# in example so CI/devs can opt-in.
DISABLE_DEBUG_JSON_LOGS=0
