
# ===================================================================
# üîß AI-chan Environment Configuration
# ===================================================================
# Configure API keys and basic settings.
# Models, voices, and advanced settings are configured in:
# assets/ai_providers_config.yaml

# --- API Keys ---
# Multiple keys format (JSON array) for automatic rotation and fallback - RECOMMENDED
OPENAI_API_KEYS=["PUT_YOUR_OPENAI_KEY_HERE"]
GEMINI_API_KEYS=["PUT_YOUR_GEMINI_KEY_HERE"]
GROK_API_KEYS=["PUT_YOUR_GROK_KEY_HERE"]

GOOGLE_CLOUD_API_KEY=PUT_YOUR_GOOGLE_CLOUD_KEY_HERE

# --- OAuth Configuration ---
GOOGLE_CLIENT_ID_DESKTOP=PUT_YOUR_GOOGLE_CLIENT_ID_DESKTOP
GOOGLE_CLIENT_ID_ANDROID=PUT_YOUR_GOOGLE_CLIENT_ID_ANDROID
GOOGLE_CLIENT_ID_WEB=PUT_YOUR_GOOGLE_CLIENT_ID_WEB

# --- Audio Configuration ---
# Preferred audio format for storage and STT fallbacks: mp3 | m4a | wav
PREFERRED_AUDIO_FORMAT=mp3

# TTS mode: google | local
AUDIO_TTS_MODE=google

# --- Application Configuration ---
# Debug mode controls logging level and debug UI options
# full: debug logs + JSON logs + all debug options visible
# basic: info logs + no JSON logs + debug options visible  
# minimal: warn logs + no JSON logs + debug options visible
# off: error logs + no JSON logs + debug options hidden
DEBUG_MODE=basic

# Number of messages to include in each summary block
SUMMARY_BLOCK_SIZE=32

# Application display name (fallback used by UI)
APP_NAME=AI-„ÉÅ„É£„É≥

